<%= simple_form_for @purchase_header, :html => { :class => 'well form-horizontal' } do |f| %>
  
  <% if @purchase_header.errors.any? %>
  <div id="error_explanation">
    <h2><%= @purchase_header.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @purchase_header.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
 <% end %>
  
  <%= f.input :slip_code %>
  <%= f.input :complete_flag, hint: "＊入力済みの場合のみ”１”をセットしてください。" %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                purchase_headers_path, :class => 'btn btn-default' %>
<% end %>
