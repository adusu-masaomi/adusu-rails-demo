<%- model_class = Deposit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:table_type_id) %>:</strong></dt>
  <dd><%= @deposit.table_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:table_id) %>:</strong></dt>
  <dd><%= @deposit.table_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deposit_due_date) %>:</strong></dt>
  <dd><%= @deposit.deposit_due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @deposit.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deposit_amount) %>:</strong></dt>
  <dd><%= @deposit.deposit_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deposit_source_id) %>:</strong></dt>
  <dd><%= @deposit.deposit_source_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completed_flag) %>:</strong></dt>
  <dd><%= @deposit.completed_flag %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              deposits_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_deposit_path(@deposit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              deposit_path(@deposit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
