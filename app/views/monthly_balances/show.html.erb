<%- model_class = MonthlyBalance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:occur_year_month) %>:</strong></dt>
  <dd><%= @monthly_balance.occur_year_month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance_daishi_hokuetsu) %>:</strong></dt>
  <dd><%= @monthly_balance.balance_daishi_hokuetsu %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance_sanshin) %>:</strong></dt>
  <dd><%= @monthly_balance.balance_sanshin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance_cash) %>:</strong></dt>
  <dd><%= @monthly_balance.balance_cash %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_actual) %>:</strong></dt>
  <dd><%= @monthly_balance.is_actual %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              monthly_balances_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_monthly_balance_path(@monthly_balance), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              monthly_balance_path(@monthly_balance),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
