<%= simple_form_for @site, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @site.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@site.errors.count, "error") %> prohibited this supplier_master from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%= f.input :name,  input_html:{ :tabindex=>"0" } %>
  <%= f.input :post,  input_html:{ :tabindex=>"1" } %>
  <%= f.input :address,  input_html:{ :tabindex=>"2" } %>
  <%= f.input :house_number,  input_html:{ :tabindex=>"3" } %>
  <%= f.input :address2,  input_html:{ :tabindex=>"4" } %>
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sites_path, :class => 'btn btn-default' %>
<% end %>
